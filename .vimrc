set number
set nocompatible
set fileencoding=utf-8
set encoding=utf-8
set cursorline

set tabstop=4
set expandtab
set smarttab
set shiftwidth=4
set softtabstop=4

nnoremap <S-h> gT
nnoremap <S-l> gt
nnoremap <S-t> :tabedit .

hi CursorLine cterm=NONE ctermbg=darkred ctermfg=white guibg=darkred guifg=white
